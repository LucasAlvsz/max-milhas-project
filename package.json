{
	"name": "api",
	"version": "1.0.0",
	"main": "server.js",
	"repository": "git@github.com:vianaz/app-express.git",
	"author": "Lucas Alves <contato.lucasalv@gmail.com>",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsup src --outDir build --format esm",
		"prestart": "npm run prisma:deploy",
		"start": "node build/server.js",
		"prisma:deploy": "prisma migrate deploy",
		"prisma:dev": "prisma migrate dev",
		"prisma:generate": "prisma generate",
		"test": "jest --passWithNoTests -i",
		"test:remote": "npm run prisma:dev && npm run test",
		"test:local": "npm run test --watch",
		"test:staged": "npm run test --findRelatedTests"
	},
	"dependencies": {
		"@prisma/client": "^4.10.1",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"joi": "^17.8.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^29.4.0",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"git-commit-msg-linter": "^4.7.3",
		"husky": "^8.0.3",
		"jest": "^29.4.3",
		"lint-staged": "^13.1.2",
		"prettier": "^2.8.4",
		"prisma": "^4.10.1",
		"ts-jest": "^29.0.5",
		"tsup": "^6.5.0",
		"tsx": "^3.12.2",
		"typescript": "^4.7.4"
	}
}
